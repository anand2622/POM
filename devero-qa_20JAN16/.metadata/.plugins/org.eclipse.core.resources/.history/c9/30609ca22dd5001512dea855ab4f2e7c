package devero.tests.regression;

import java.io.File;
import java.io.IOException;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.firefox.FirefoxProfile;

public class TableTest {
	public static void main(String[] args) throws IOException {
		//Save the path of the XPI files as per your saved location
		String firebugPath = "D:\\firebug-2.0.14.xpi";
		String firepathPath = "D:\\firepath-0.9.7.1-fx.xpi";
		//Create a new Profile for the new settings
		FirefoxProfile profile = new FirefoxProfile();
		// Pass the XPIs path to the profile
		profile.addExtension(new File(firebugPath));
		profile.addExtension(new File(firepathPath));
		//Set default Firebug preferences and FirePath preferences
		String ext = "extensions.firebug.";
		String ext1 = "extensions.firepath.";
		profile.setPreference(ext + "currentVersion", "2.0.14");
		profile.setPreference(ext1 + "currentVersion", "0.9.7.1");
//		profile.setPreference(ext + "allPagesActivation", "on");
//		profile.setPreference(ext + "defaultPanelName", "net");
//		profile.setPreference(ext + "net.enableSites", true);
		WebDriver driver = new FirefoxDriver(profile);
		driver.manage().window().maximize();
		//WebDriver driver = new FirefoxDriver();
		driver.get("https://t4.devero.com/login.action?site=qa");
		driver.findElement(By.xpath(".//*[@id='left']/form/input[1]")).sendKeys("sa");
		driver.findElement(By.xpath(".//*[@id='left']/form/input[2]")).sendKeys("testing123");
		driver.findElement(By.xpath(".//*[@id='submitButton']")).click();
		driver.findElement(By.linkText("View Agencies")).click();
		
		String sRow = "1";
		String sCol = "2";
		
		//Here we are locating the xpath by passing variables in the xpath
		String sCellValue = driver.findElement(By.xpath(".//*[@id='agenciesTable']/tbody/tr[" + sRow + "]/td[" + sCol + "]")).getText();
		System.out.println(sCellValue);
		String sRowValue = "Corporate";
		
		//First loop will find the 'Corporate' in the first column
		for (int i=1;i<=15;i++){
			//String sValue = null;
			//sValue = driver.findElement(By.xpath(".//*[@id='agenciesTable']/tbody/tr[" + i + "]/th")).getText();
				if(sCellValue.equalsIgnoreCase(sRowValue)){
					// If the sValue match with the description, it will initiate one more inner loop for all the columns of 'i' row 
					for (int j=1;j<=15;j++){
						String sColumnValue= driver.findElement(By.xpath(".//*[@id='agenciesTable']/tbody/tr[" + i + "]/td["+ j +"]")).getText();
						System.out.println(sColumnValue);
					}
				break;
				}
			}
		//driver.close();
	}

		

}
